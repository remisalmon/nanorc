# Syntax highlighting for LookML.

syntax snowflake "\.l(oo)?kml$"

comment "# "

# Keywords.
color blue "^[[:blank:]]*[[:alnum:]_]+:"

# Strings.
color green ""([^"]|\\")*""
color green "'([^']|\\')*'"

# SQL.
color magenta start="\<sql[[:alnum:]_]*:" end=";;"
color blue "\<sql[[:alnum:]_]*:"
color normal ":"

# Comments.
color red "(^|[[:blank:]])#.*"

# Trailing whitespace.
color ,green "[[:space:]]+$"
