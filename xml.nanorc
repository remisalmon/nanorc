# Syntax highlighting for XML.

syntax yaml "\.xml$"

header "^<\?xml.*\?> *$"

comment "<!--|-->"

# Elements.
color blue "(<[^> ]+|/?>)"

# Attributes.
color magenta " [^<=]+="

# Strings.
color green ""([^"]|\\")*""

# Headers.
color red "^<\?xml.*\?> *$"

# Comments.
color red start="<!--" end="-->"

# Trailing whitespaces.
color ,green " +$"
